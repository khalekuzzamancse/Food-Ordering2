<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".activity.AddItem_Activity">

<!--        <EditText-->
<!--            android:layout_margin="4dp"-->
<!--            android:inputType="textPersonName"-->
<!--            android:id="@+id/name"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Item Name" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="8dp"
            style="@style/TextInputLayout"
            android:hint="Item Name"
            app:startIconDrawable="@drawable/food_name_icon">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                style="@style/TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

<!--        <EditText-->
<!--            android:layout_margin="4dp"-->
<!--            android:inputType="number"-->
<!--            android:id="@+id/price"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Item Price" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="8dp"
            style="@style/TextInputLayout"
            android:hint="Price"
            app:startIconDrawable="@drawable/ic_price">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/price"
                android:inputType="number"
                style="@style/TextInputEditText" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Category" >

        <AutoCompleteTextView
            android:id="@+id/dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:maxLines="1"
            android:textColor="@color/black"
           />
        </com.google.android.material.textfield.TextInputLayout>
<!--        <EditText-->
<!--            android:layout_margin="4dp"-->
<!--            android:id="@+id/itemSubType"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Sub Type" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="8dp"
            style="@style/TextInputLayout"
            android:hint="Subtype"
            app:startIconDrawable="@drawable/ic_category">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemSubType"
                style="@style/TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>
<!--        <EditText-->
<!--            android:layout_margin="4dp"-->
<!--            android:id="@+id/quantity"-->
<!--            android:inputType="number"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Available Quantity" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="8dp"
            style="@style/TextInputLayout"
            android:hint="Quantity"
            app:startIconDrawable="@drawable/ic_qauntity">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/quantity"
                android:inputType="number"
                style="@style/TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>
<!--        <EditText-->
<!--            android:layout_margin="4dp"-->
<!--            android:id="@+id/description"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Description" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="8dp"
            style="@style/TextInputLayout"
            android:hint="Description"
            app:startIconDrawable="@drawable/ic_description">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description"
                android:inputType="textMultiLine"
                style="@style/TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="220dp"
            android:src="@drawable/vector" />
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="20dp"
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Upload" />


    </LinearLayout>
</ScrollView>
