<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FoodList_1_Fragment">

        <LinearLayout
            android:id="@+id/burger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="15dp"
            android:padding="8dp"
            android:background="@drawable/item_show_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/burger" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger       60Tk"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/edtTxt_foodItem_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_foodItem_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#7CF4FF"
                    android:textAllCaps="false"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add to cart"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Pizza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="15dp"
            android:padding="8dp"
            android:background="@drawable/item_show_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pizza" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza       350Tk"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/edtTxt_foodItem_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_foodItem_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#7CF4FF"
                    android:textAllCaps="false"
                    android:text="Add to cart"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Bread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="15dp"
            android:padding="8dp"
            android:background="@drawable/item_show_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bread" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bread       50Tk"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/edtTxt_foodItem_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_foodItem_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#7CF4FF"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:text="Add to cart"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Food4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="15dp"
            android:padding="8dp"
            android:background="@drawable/item_show_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/food_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food      100Tk"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/edtTxt_foodItem_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_foodItem_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#7CF4FF"
                    android:textAllCaps="false"
                    android:text="Add to cart"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Food5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="15dp"
            android:padding="8dp"
            android:background="@drawable/item_show_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/food_5" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food       120Tk"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/edtTxt_foodItem_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Quantity"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_foodItem_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add to cart"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#7CF4FF"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
